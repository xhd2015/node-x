{
    "name": "node-ext",
    "version": "0.0.37",
    "dependencies": {},
    "scripts": {
        "build": "webpack --config webpack.config.js --progress --mode=production",
        "build-dev": "webpack --config webpack.config.js --progress --mode=development",
        "install-local": "npm run build && cp bin/run.js \"$(npm -g root)/node-ext/bin/run.js\"",
        "prepack": "npm run build",
        "postinstall": "if [[ -d /usr/local/bin && ! -e /usr/local/bin/nx ]];then ln -sf \"$(npm -g root)/node-ext/bin/nx\" /usr/local/bin/nx;fi"
    },
    "bin": {
        "node-ext": "./bin/node-ext.js"
    },
    "devDependencies": {
        "@babel/cli": "^7.1.0",
        "@babel/core": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "@types/node": "^18.11.18",
        "babel-loader": "^8.1.0",
        "file-loader": "^6.0.0",
        "ts-loader": "^9.3.1",
        "webpack-cli": "^4.10.0"
    }
}